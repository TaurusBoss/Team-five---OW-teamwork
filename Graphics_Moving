var bg = createSprite(200,200);
bg.setAnimation("bg.png_1");

//TOP WALL
var topwallgroup = createGroup();
var topwallY = 78;
for (var i = 0; i < 5; i++) {
  topwallgroup.add(createSprite(topwallY, 9));
  topwallY = topwallY+64;
}
topwallgroup.setAnimationEach("top_wall.png_1");

//TOP TORCH
