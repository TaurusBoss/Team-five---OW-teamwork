//HERO
var hero = createSprite(200, 200);
hero.setAnimation("red_alien_1");
hero.scale = 0.1;


function draw() {
  if (keyDown("left")) {
    if (hero.x > 30) {
      hero.x = hero.x - 5;
    }
  }
  if (keyDown("right")) {
    if (hero.x < 370) {
      hero.x = hero.x + 5;
    }
  }
  if (keyDown("up")) {
    if (hero.y > 40) {
      hero.y = hero.y - 5;
    }
  }
  if (keyDown("down")) {
    if (hero.y < 345) {
      hero.y = hero.y + 5;
    }
  }
  
  
  drawSprites();
}
